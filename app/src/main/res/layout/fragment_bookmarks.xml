<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height=  "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.BookmarksFragment">

    <TextView
        android:id="@+id/bookmarks_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bookmarks"
        android:textColor="#333647"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/saved_article_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7C82A1"
        android:text="Saved articles to the library"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmarks_tv"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmarks_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:itemCount="4"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_recommend_rv"
        app:layout_constraintTop_toBottomOf="@id/saved_article_text_tv"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/ic_ellipse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/no_bookmarks"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/book_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/ic_book"
        app:layout_constraintTop_toTopOf="@id/ellipse"
        app:layout_constraintBottom_toBottomOf="@id/ellipse"
        app:layout_constraintRight_toRightOf="@id/ellipse"
        app:layout_constraintLeft_toLeftOf="@id/ellipse"
        />
    <TextView
        android:id="@+id/no_bookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't saved any articles\nyet. Start reading and\nbookmarking them now"
        android:textSize="16sp"
        android:textColor="#333647"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ellipse"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>